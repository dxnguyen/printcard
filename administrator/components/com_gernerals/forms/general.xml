<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Generals\Component\Gernerals\Administrator\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_GERNERALS_FORM_LBL_GENERAL_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_GERNERALS_FORM_LBL_GENERAL_MODIFIED_BY"/>
    <field name="slogan" filter="safehtml" type="text" translateLabel="true" label="COM_GERNERALS_FORM_LBL_GENERAL_SLOGAN" description="COM_GERNERALS_FORM_DESC_GENERAL_SLOGAN" hint="COM_GERNERALS_FORM_LBL_GENERAL_SLOGAN"/>
    <field name="website" filter="safehtml" type="text" label="COM_GERNERALS_FORM_LBL_GENERAL_WEBSITE" description="COM_GERNERALS_FORM_DESC_GENERAL_WEBSITE" hint="COM_GERNERALS_FORM_LBL_GENERAL_WEBSITE"/>
    <field name="web_api" filter="safehtml" type="text" label="Api Key" description="COM_GERNERALS_FORM_DESC_GENERAL_WEB_API" hint="COM_GERNERALS_FORM_LBL_GENERAL_WEB_API"/>
    <field name="facebook_link" filter="safehtml" type="text" label="COM_GERNERALS_FORM_LBL_GENERAL_FACEBOOK_LINK" description="COM_GERNERALS_FORM_DESC_GENERAL_FACEBOOK_LINK" hint="COM_GERNERALS_FORM_LBL_GENERAL_FACEBOOK_LINK"/>
    <field name="zalo_link" filter="safehtml" type="text" label="COM_GERNERALS_FORM_LBL_GENERAL_ZALO_LINK" description="COM_GERNERALS_FORM_DESC_GENERAL_ZALO_LINK" hint="COM_GERNERALS_FORM_LBL_GENERAL_ZALO_LINK"/>
    <field name="instagram_link" filter="safehtml" type="text" label="COM_GERNERALS_FORM_LBL_GENERAL_INSTAGRAM_LINK" description="COM_GERNERALS_FORM_DESC_GENERAL_INSTAGRAM_LINK" hint="COM_GERNERALS_FORM_LBL_GENERAL_INSTAGRAM_LINK"/>
    <field name="twitter_link" filter="safehtml" type="text" label="COM_GERNERALS_FORM_LBL_GENERAL_TWITTER_LINK" description="COM_GERNERALS_FORM_DESC_GENERAL_TWITTER_LINK" hint="COM_GERNERALS_FORM_LBL_GENERAL_TWITTER_LINK"/>
    <field name="telephone" filter="safehtml" type="text" label="COM_GERNERALS_FORM_LBL_GENERAL_TELEPHONE" description="COM_GERNERALS_FORM_DESC_GENERAL_TELEPHONE" hint="COM_GERNERALS_FORM_LBL_GENERAL_TELEPHONE"/>
    <field name="hotline" filter="safehtml" type="text" label="COM_GERNERALS_FORM_LBL_GENERAL_HOTLINE" description="COM_GERNERALS_FORM_DESC_GENERAL_HOTLINE" hint="COM_GERNERALS_FORM_LBL_GENERAL_HOTLINE"/>
    <field name="footer_text" type="textarea" label="COM_GERNERALS_FORM_LBL_GENERAL_FOOTER_TEXT" description="COM_GERNERALS_FORM_DESC_GENERAL_FOOTER_TEXT" hint="COM_GERNERALS_FORM_LBL_GENERAL_FOOTER_TEXT"/>
    <field name="email" validate="email" type="email" label="COM_GERNERALS_FORM_LBL_GENERAL_EMAIL" description="COM_GERNERALS_FORM_DESC_GENERAL_EMAIL" hint="COM_GERNERALS_FORM_LBL_GENERAL_EMAIL"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
  <fieldset name="accesscontrol">
    <field name="asset_id" type="hidden" filter="unset"/>
    <field name="rules" type="rules" label="JFIELD_RULES_LABEL" translate_label="false" filter="rules" validate="rules" class="inputbox" component="com_gernerals" section="general"/>
  </fieldset>
</form>
